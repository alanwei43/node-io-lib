{
  "compilerOptions": {
    "allowJs": false,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "lib": [
      "ESNext"
    ],
    "outDir": "dist/",
    "moduleResolution": "Node",
    "removeComments": false,
    "module": "CommonJS",
    "target": "ES2015",
    "esModuleInterop": true,
    "declaration": true,
    "declarationMap": true,
  },
  "files": [
    "src/index.ts"
  ],
  "include": [
    "src/global.d.ts",
    "src/bin/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "src/**/*.test.ts",
    "src/**/*.spec.ts"
  ]
}